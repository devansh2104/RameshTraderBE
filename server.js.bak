// Load environment variables
require('dotenv').config();

const express = require('express');
const bodyParser = require('body-parser');
const cors = require('cors');
const path = require('path');
const fs = require('fs');

// Ensure uploads directory exists
const uploadDir = process.env.UPLOAD_PATH || 'uploads';
if (!fs.existsSync(uploadDir)) {
  fs.mkdirSync(uploadDir, { recursive: true });
  console.log(`📁 Created uploads directory: ${uploadDir}`);
}

// Database connection
const db = require('./db');

// Import routes
const bannerRoutes = require('./routes/banner');
const categoryRoutes = require('./routes/category');
const itemRoutes = require('./routes/item');
const enquiryRoutes = require('./routes/enquiry');
const blogRoutes = require('./routes/blog');


const app = express();
const PORT = process.env.PORT || 4001;

// CORS configuration
// const corsOptions = {
//   origin: process.env.CORS_ORIGIN,
//   credentials: true
// };

// CORS configuration to allow all origins
const corsOptions = {
  origin: '*', // Allow all origins
  credentials: false // Must be false when origin is '*'
};


// Middleware
app.use(cors(corsOptions));
app.use(bodyParser.json());
app.use(bodyParser.urlencoded({ extended: true }));
app.use('/uploads', express.static(path.join(__dirname, 'uploads')));

// API routes
app.use('/api/banners', bannerRoutes);
app.use('/api/categories', categoryRoutes);
app.use('/api/items', itemRoutes);
app.use('/api/enquiries', enquiryRoutes);
app.use('/api/blogs', blogRoutes);


// Health check
app.get('/', (req, res) => {
  res.json({
    message: 'rameshtradersBE API Server is running!',
    environment: process.env.NODE_ENV || 'development',
    endpoints: {
      banners: 'GET/POST/PUT/DELETE /api/banners',
      categories: 'GET/POST/PUT/DELETE /api/categories',
      items: 'GET/POST/PUT/DELETE /api/items',
      enquiries: 'GET/POST/PUT/DELETE /api/enquiries',
      blogs: 'GET/POST/PUT/DELETE /api/blogs',
    }
  });
});

app.listen(PORT, () => {
  console.log(`🚀 rameshtradersBE server running on port ${PORT}`);
}); 
